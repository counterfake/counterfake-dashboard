# JWT Secret Key (use a strong, random string in production)
JWT_SECRET=enter-jwt-secret-key

# API Configuration
# Brand API
NEXT_PUBLIC_BRAND_API_URL=enter-brand-api-url

# Platform Protection API
NEXT_PUBLIC_PP_API_URL=enter-pp-api-url

# Product Analysis API
NEXT_PUBLIC_PRODUCT_ANALYSIS_API_URL=enter-product-analysis-api-url

# Image URL
NEXT_PUBLIC_IMAGE_URL=enter-image-url

# Environment
NODE_ENV=development

# Feature Flags
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_SOCIAL_LOGIN=false

# Email Configuration
EMAIL_SERVICE=enter-email-service
EMAIL_HOST=enter-email-host
EMAIL_PORT=enter-email-port
EMAIL_USER=enter-email-user
EMAIL_PASSWORD=enter-email-password